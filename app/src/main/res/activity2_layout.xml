<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc72b"
        android:text=""
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/nicknameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="3dp"
        android:text="Nickname"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/nicknameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nicknameTv"
        android:layout_marginTop="3dp"
        android:hint="Enter your nickname"
        android:inputType="text"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/birthdayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nicknameEt"
        android:layout_marginTop="3dp"
        android:text="Date Of Birth"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/birthdayEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthdayTv"
        android:layout_marginTop="3dp"
        android:hint="Enter your date of birth"
        android:inputType="date"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textSize="24sp"
        />
    <Button
        android:id = "@+id/button_reg_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Submit"
        android:layout_below="@+id/birthdayEt"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
