<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc72b"
        android:text=""
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:layout_margin="10dp"
        android:textSize ="24sp"
        />
   <TextView
       android:id="@+id/yourName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Your Name"
       android:textSize="20sp"
       android:layout_below="@+id/createAccount"
       android:layout_alignLeft="@+id/createAccount"
       android:layout_marginTop="20dp"
       android:textStyle="bold"
    />
    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="120dp"
        android:inputType="text"
        android:hint="First"
        android:layout_margin ="10dp"
        android:layout_below="@+id/yourName"
        />
    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourName"
        android:paddingRight="80dp"
        android:inputType="text"
        android:layout_toRightOf="@+id/firstName"
        android:layout_margin="10dp"
        android:layout_alignRight="@+id/createAccount"
        android:hint="Last"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstName"
        android:layout_alignLeft="@+id/firstName"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/enterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:paddingRight="80dp"
        android:inputType="text"
        android:layout_margin="10dp"
        android:hint="Enter email address"
        />
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterEmail"
        android:layout_alignLeft="@+id/enterEmail"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:paddingRight="80dp"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:hint="Enter password"
        />
    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPassword"
        android:layout_alignLeft="@+id/enterPassword"
        android:text="Confirm Password"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/enterConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword"
        android:paddingRight="80dp"
        android:inputType="text"
        android:layout_margin="10dp"
        android:hint="Enter password again"
        />
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterConfirmPassword"
        android:layout_alignLeft="@+id/enterConfirmPassword"
        android:text="PhoneNumber"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/enter_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter phone number"
        android:inputType="text"
        android:paddingRight="80dp" />
    <TextView
        android:id="@+id/page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/next_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:layout_above="@+id/page1"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/already_have_account_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_page_button"
        android:text="Already have an account?"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
    />
</RelativeLayout>