<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc72b"
    tools:context=".Friends">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_lay"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close_friends_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="0dp"
            android:text="CloseFriends"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/changeNicknameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_friends_tv"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="Change Your Nickname"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/changeNicknameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:hint="Enter Your New Nickname"
            android:maxLines="1"
            android:layout_below="@id/changeNicknameTv" />


        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changeNicknameEt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Save"
            android:background="@drawable/rounded_button_white"/>


    </RelativeLayout>




</RelativeLayout>