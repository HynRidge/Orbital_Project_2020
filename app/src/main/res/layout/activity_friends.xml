<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Friends">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close_friends_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="0dp"
            android:text="CloseFriends"
            android:textSize="40sp"></TextView>

        <Button
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button"></Button>

        <Button
            android:id="@+id/add_friends_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="Add Friends"></Button>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_profile_pic_tv"
        android:text="Change Your Profile Pic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:textSize="40sp">
    </TextView>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/profile_pic_iv"
        android:layout_below="@+id/change_profile_pic_tv"
        app:srcCompat="@drawable/profile_pic"
        android:layout_centerHorizontal="true"
        tools:ignore="VectorDrawableCompat">
    </ImageView>
    <TextView
        android:id="@+id/changeNicknameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic_iv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Change Your Nickname"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/changeNicknameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:hint="Enter Your New Nickname"
        android:maxLines="1"
        android:layout_below="@id/changeNicknameTv" />
    <TextView
        android:id="@+id/changeStatusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeNicknameEt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Change Your Status"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/UpdateStatusEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:hint="Change Your Status"
        android:maxLines="5"
        android:layout_below="@id/changeStatusTv" />
</RelativeLayout>